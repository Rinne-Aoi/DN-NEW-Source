<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hidden1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hidden1" />

    <EditText
        android:id="@+id/hiddenedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hidden1"
        android:maxLength="2"
        android:maxLines="1"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/hiddengo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:onClick="hiddengo"
        android:background="@drawable/activity_main_coner"
        android:layout_below="@+id/hiddenedit"
        android:text="@string/go" />

</RelativeLayout>